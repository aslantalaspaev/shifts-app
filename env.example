# .env.example

# ==========================================
# TELEGRAM BOT CONFIGURATION
# ==========================================
# Получите BOT_TOKEN от @BotFather в Telegram
BOT_TOKEN=YOUR_BOT_TOKEN_HERE

# Ваш Chat ID для администраторских уведомлений (опционально)
ADMIN_CHAT_ID=

# ==========================================
# MINI APP CONFIGURATION
# ==========================================
# URL для локального тестирования
MINI_APP_URL=http://localhost:5000

# URL для продакшена (используйте HTTPS!)
# MINI_APP_URL=https://your-domain.com

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
# SQLite (для локального развертывания)
DATABASE_URL=sqlite:///shifts.db

# PostgreSQL (для продакшена)
# DATABASE_URL=postgresql://user:password@localhost:5432/shifts_db

# ==========================================
# APPLICATION SETTINGS
# ==========================================
# На сколько дней вперед пользователи могут добавлять смены (в днях)
SHIFTS_FORWARD_DAYS=30

# ==========================================
# DEVELOPMENT/PRODUCTION
# ==========================================
# development или production
ENVIRONMENT=development

# Debug mode (используйте False в продакшене!)
DEBUG=True
